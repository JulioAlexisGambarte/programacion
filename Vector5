#include "stdafx.h"
#include "stdio.h"
#include "stdlib.h"
#define  nMax 100

void cargar (int vec[], int n);
bool capicua(int vec[nMax],int n);

void main()
{int n, vec[nMax];

printf("ingrese el numero de elementos del vector: ");
 scanf("%d",&n);
 cargar(vec,n);
 capicua(vec,n);

 printf("\n\n");
 system("pause");
}

void cargar (int vec[], int n)
{ int i,precio;
  for(i=0;i<n;i++)
  {printf("\ningrese vec[%d]:  ",i+1);
   scanf("%d",&vec[i]);
  }

}
 bool capicua(int vec[nMax],int n)
 {int sw,medio;
  sw=true;
  medio=int(n/2);
  for(i=0;i<medio,i++)
  {if(vec[i]!=vec[n-i-1])
		{sw=false
		}
	}
  return(sw);
 }
